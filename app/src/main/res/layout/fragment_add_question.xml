<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a2is70.quizmaster.activities.CreateActivity">

    <TextView
        android:id="@+id/add_question_answer1_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer 1"
        android:layout_above="@+id/add_question_answer2"
        android:layout_below="@+id/add_question_radio_open"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/add_question_answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint='"E.g. Cow"'
        android:inputType="text"
        android:textSize="12sp"
        android:layout_above="@+id/add_question_answer3_header"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp" />

    <TextView
        android:id="@+id/add_question_text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Question"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/add_question_text"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_question_text_header"
        android:ems="10"
        android:hint='E.g. "What is 1+1?"'
        android:inputType="text"
        android:singleLine="true"
        android:textSize="12sp" />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/register_type_student">

    </RadioGroup>

    <TextView
        android:id="@+id/add_question_answer2_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer 2"
        android:layout_above="@+id/add_question_answer1"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/add_question_answer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint='"E.g 2"'
        android:inputType="text"
        android:textSize="12sp"
        android:layout_above="@+id/add_question_answer2_header"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp" />

    <TextView
        android:id="@+id/add_question_answer3_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer 3"
        android:layout_above="@+id/add_question_answer3"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/add_question_answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint='"E.g yes"'
        android:inputType="text"
        android:textSize="12sp"
        android:layout_above="@+id/add_question_answer4_header"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp" />

    <TextView
        android:id="@+id/add_question_answer4_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer 4"
        android:layout_above="@+id/add_question_answer4"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/add_question_answer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint='"E.g. Christmas"'
        android:inputType="text"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/add_question_radio_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_question_text"
        android:layout_marginTop="14dp"
        android:text="Open" />

    <RadioButton
        android:id="@+id/add_question_radio_closed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Closed"
        android:layout_alignBaseline="@+id/add_question_radio_open"
        android:layout_alignBottom="@+id/add_question_radio_open"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
