<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/join_group_access_code_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the access code provided by your teacher to join a group." />

    <EditText
        android:id="@+id/join_group_access_code"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Access code" />

</LinearLayout>

<!--See https://developer.android.com/guide/topics/ui/dialogs.html
to include this view in a proper dialog-->